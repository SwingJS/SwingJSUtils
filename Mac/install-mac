#!/bin/bash

# Download
BINARY="eclipse-jee-neon-3-macosx-cocoa-x86_64.tar.gz"
APP="Eclipse.app"
if [ ! -z "$1" ]
then
    cd $1
fi

echo $BINARY
echo $APP
if [ -d "$APP" ]; then
    rm -rf $INSTALLPATH/Eclipse.app
fi

if [ ! -f "$BINARY" ]; then
    curl -O http://eclipse.mirror.rafal.ca/technology/epp/downloads/release/neon/3/eclipse-jee-neon-3-macosx-cocoa-x86_64.tar.gz
fi

curl -LOk https://github.com/BobHanson/java2script/releases/download/v3.1.1/3.1.1.zip
tar xvf eclipse-jee-neon-3-macosx-cocoa-x86_64.tar.gz
rm eclipse-jee-neon-3-macosx-cocoa-x86_64.tar.gz
unzip 3.1.1.zip -d Eclipse.app/Contents/Eclipse/dropins/
rm 3.1.1.zip
